{
    // Universal commands
    "InputCntl": "input.cntl",
    "AeroCsh": "aero.csh",

	// Iteration control and command-line inputs
	"RunControl": {
        // Run sequence
        "PhaseSequece": [0],
        "PhaseIters": [700],
        // System configuration
	    "nProc": 4,
        "MPI": 0,
        "Adaptive": 1,
	    // Options for ``flowCart``
	    "flowCart": {
            "it_fc": 200,
            "cfl": 1.1,
            "mg_fc": 3,
            "y_is_spanwise": true
        },
        // Intersections?
        "intersect": {
            "run": true,
            "triged": false
        },
        // Defines the flow domain automatically
        "autoInputs": {"r": 6},
        // Volume mesh options
        "cubes": {
            "maxR": 8,
            "pre": "preSpec.c3d.cntl",
            "cubes_a": 8,
            "cubes_b": 2,
            "reorder": true
        },
        // Parameters for adaption
        "Adaptation": {
            //number of adaptation cycles
            "n_adapt_cycles": [3],
            // Create initial mesh?
            "jumpstart": 0,
            // Number of flowCart iters on each new mesh
            "ws_it": [100, 200, 200],
            // Growth in the number of cells
            "mesh_growth": [1.75, 2.5],
            // Adaptation type
            "apc": ["p", "a"],
            // Number of buffer layers
            "buf": 1
        }
	},

	// Mesh settings
    "Mesh": {
        // Surface triangulation
        "TriFile": ["arrow.tri", "engine.tri"],
        // Extra refinements
        "XLev": [
            {"n": 2, "compID": "noz_bc"},
            {"n": 1, "compID": "noz_interior"}
        ],
        // Extra bounding boxes for adaptation regions
        "BBox": [
            {"n": 8, "compID": "noz_exterior", "xp": 2.5}
        ]
    },
    
    // Define the output functional
    "Functional": {
        "CA_C": {"compID": "missile_no_thrust", "force": 0, "weight": 0.5},
        "CY_C": {"compID": "missile_no_thrust", "force": 1, "weight": 0.5},
        "CN_C": {"compID": "missile_no_thrust", "force": 2, "weight": 1.0}
    },
    
    // Describe the reference values and config.
    "Config": {
        // Defer to a file for most things.
        "File": "missile.xml",
        // Declare forces and moments
        "Force": [
            "cap",
            "body",
            "fins",
            "missile_no_base",
            "missile_no_thrust",
            "missile_thrust",
            "missile_total"
        ],
        "RefPoint": {
            "missile_no_base": "MRP",
            "missile_no_thrust": "MRP",
            "missile_thrust": "MRP",
            "missile_total": "MRP",
            "fins": "MRP"
        },          
        // Reference points
        "Points": {
            "MRP": [3.5, 0.0, 0.0]
        },
        // Reference quantities
        "RefArea": 3.14159,
        "RefLength": 1.0
    },
    
    // Database info
    "DataBook": {
        // List of data book components
        "Components": ["missile_no_base", "missile_thrust"],
        // Location of data book
        "Folder": "data/",
        // Parameters for collecting data
        "nFirst": 0,
        "nStats": 100,
        "nMin": 100,
        // Basic component
        "missile_no_base": {
            "Type": "FM"
        },
        "missile_thrust": {
            "Type": "FM"
        }
    },
    
    // Report info
    "Report": {
        // List of reports
        "Reports": ["case"],
        // Define the report
        "case": {
            "Title": "Automated Cart3D Report with Thrust BCs",
            "Subtitle": "Example \\texttt{08\\_thrust}",
            "Restriction": "pyCart Example - Distribution Unlimited",
            "Figures": ["CaseTables", "CasePlots", "CaseFlow"]
        },
        // Define the figures
        "Figures": {
            "CaseTables": {
                "Alignment": "left",
                "Subfigures": ["CaseConds", "FMTable"]
            },
            "CasePlots": {
                "Header": "Iterative analysis and sectional loads",
                "Alignment": "center",
                "Subfigures": [
                    "missile_CA",  "missile_CY",  "missile_CN",
                    "missile_CLL", "missile_CLN", "missile_CLM",
                    "L1",          "engine_CT",   "engine_CN"
                ]
            },
            "CaseFlow": {
                "Header": "Flow visualization",
                "Alignment": "center",
                "Subfigures": [
                    "slice-y0-mach", "slice-y0-mach-mesh"
                ]
            }
        },
        // Definitions for subfigures
        "Subfigures": {
            // Table of trajectory variables
            "CaseConds": {
                "Type": "Conditions",
                "Width": 0.28,
                "Header": "Conditions"
            },
            // Table of force and moment averages
            "FMTable": {
                "Type": "Summary",
                "Components": ["missile_no_base", "missile_total", "fins"],
                "Width": 0.71,
                "Header": "Force \\& Moment Summary",
                "MuFormat": "%.3e",
                "SigmaFormat": "%.3e"
            },
            // Iterative history
            "missile": {
                "Type": "PlotCoeff",
                "Component": "missile_no_base",
                "nPlotFirst": 251,
                "FigWidth": 5.5,
                "FigHeight": 4.2,
                "Width": 0.33
            },
            "missile_CA": {"Type": "missile", "Coefficient": "CA"},
            "missile_CY": {"Type": "missile", "Coefficient": "CY"},
            "missile_CN": {"Type": "missile", "Coefficient": "CN"},
            "missile_CLL": {
                "Type": "missile",
                "Coefficient": "CLL",
                "MuFormat": "%.2e",
                "ShowSigma": false
            },
            "missile_CLM": {"Type": "missile", "Coefficient": "CLM"},
            "missile_CLN": {
                "Type": "missile",
                "Coefficient": "CLN",
                "MuFormat": "%.2e",
                "ShowSigma": false
            },
            "engine": {
                "Type": "missile",
                "Component": "missile_thrust"
            },
            "engine_CT":  {"Type": "engine", "Coefficient": "CT"},
            "engine_CN":  {"Type": "engine", "Coefficient": "CN"},
            "engine_CLM": {"Type": "engine", "Coefficient": "CLM"},
            // Residual history
            "L1": {
                "Type": "PlotL1",
                "FigWidth": 5.5,
                "FigHeight": 6,
                "Width": 0.33,
                "Caption": "$L_1$ Density Residual"
            },
            // --- Tecplot ---
            "TecBase": {
                "Type": "Tecplot",
                "FigWidth": 1024,
                "Width": 0.48,
                "Caption": "Surface $C_p$ and $y{=}0$ Mach slice",
                "ContourLevels": [
                    {
                        "NContour": 1,
                        "MinLevel": -0.4,
                        "MaxLevel": 1.2,
                        "Delta": 0.1
                    },
                    {
                        "NContour": 2,
                        "MinLevel": 0.0,
                        "MaxLevel": 4.0,
                        "Delta": 0.1
                    }
                ],
                "ColorMaps": [
                    {
                        "NContour": 1,
                        "ColorMap": {
                            "-0.4": "blue",
                            "0.0": "white",
                            "1.2": "red"
                        }
                    },
                    {
                        "NContour": 2,
                        "Constraints": ["mach < 0.8"],
                        "ColorMap": {
                            "0.0": "darkpurple",
                            "$mach": "white",
                            "1.0": ["cyan", "green"],
                            "4.0": "darkorange"
                        }
                    },
                    {
                        "NContour": 2,
                        "Constraints": ["mach >= 0.8", "mach <= 1.25"],
                        "ColorMap": {
                            "0.0": "darkpurple",
                            "$mach": "white",
                            "4.0": "darkorange"
                        }
                    },
                    {
                        "NContour": 2,
                        "Constraints": ["mach > 1.25"],
                        "ColorMap": {
                            "0.0": "darkpurple",
                            "1.0": ["#b55fbf", "green"],
                            "$mach": "white",
                            "4.0": "darkorange"
                        }
                    }
                ]
            },
            // With mesh
            "slice-y0-mach": {
                "Type": "TecBase",
                "Layout": "slice-y0-mach.lay"
            },
            "slice-y0-mach-mesh": {
                "Type": "TecBase",
                "Layout": "slice-y0-mach-mesh.lay"
            }
        }
    },
    
    // RunMatrix (i.e. run matrix) description
    "RunMatrix": {
        "Keys": [
            "mach", "alpha", "q", "T",
            "tilt", "CT",
            "config", "Label"
        ],
        "File": "matrix.csv",
        "GroupMesh": false,
        "Definitions": {
            "mach": {
                "Format": "%0.2f"
            },
            "tilt": {
                "Type": "rotation",
                "Value": "float",
                "Group": false,
                "Center": [8.0, 0.0, 0.0],
                "Axis":   [0.0, 1.0, 0.0],
                "CompID": [
                    "engine_mount",
                    "noz_exterior",
                    "noz_interior",
                    "noz_bc"
                ],
                "Abbreviation": "_t",
                "Format": "%.1f"
            },
            "CT": {
                "Type": "SurfCT",
                "Value": "float",
                "TotalTemperature": 8500.0,
                "AreaRatio": 4.0,
                "RefPressure": "freestream",
                "RefTemperature": "freestream",
                "RefDynamicPressure": "freestream",
                "CompID": "noz_bc",
                "Abbreviation": "T",
                "Format": "%.1f"
            }
        }
    }
}
